@model CustomerChat.Models.RequestViewModel



@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-8">



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        
           
        <div>
            @Html.HiddenFor(model => model.IdRequestCustomer)
        </div>
  
        <div class="form-group">
            @Html.LabelFor(model => model.CustomerName)
        </div>
        <div>
            @Html.TextBoxFor(model => model.CustomerName,new { @class="form-control",placeholder ="Your name"})
            @Html.ValidationMessageFor(model => model.CustomerName)
        </div>

        <div>
            @Html.LabelFor(model => model.Document)
        </div>
        <div>
            @Html.TextBoxFor(model => model.Document,new { @class="form-control",placeholder ="Your document"})
            @Html.ValidationMessageFor(model => model.Document)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => Model.SelectedDocumentType)
            @Html.DropDownListFor(x => Model.SelectedDocumentType, new SelectList(Model.DocumentTypes, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "DocumentType"})
            @Html.ValidationMessageFor(x => x.SelectedDocumentType, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(model => model.Email)
        </div>
        <div>
            @Html.TextBoxFor(model => model.Email,new { @class="form-control",placeholder ="Your email"})
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div>
            @Html.LabelFor(model => model.Subject)
        </div>
        <div>
            @Html.TextBoxFor(model => model.Subject,new { @class="form-control",placeholder ="Your question"})
            @Html.ValidationMessageFor(model => model.Subject)
        </div>

         <hr />
    
        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-info">Create</button>
        </div>

}

</div>

<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>



<script type="text/javascript" >
    $(function () {
        $('#menu').css('display', 'none');
        $('#login').css('display', 'none');
    });
</script>
